@*admin/Translation/Edit*@

@model RemliCMS.WebData.Entities.Translation

<div class="row">
    <div class="large-12 columns">    

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Translation</legend>
        
                @Html.HiddenFor(model => model.Id)

                <div class ="row">
                    <div class="lsmall-4 large-2 columns">
                        <label>@Html.LabelFor(model => model.Url)</label>
                        @Html.ValueFor(model => model.Url)
                        @Html.HiddenFor(model => model.Url)
                    </div>
                    <div class="small-6 large-4 columns">
                        @if (Model.IsDefault)
                        {
                            @Html.HiddenFor(model => model.IsDefault)
                            <p><kbd class="green">Default Translation</kbd></p>   
                        }                     
                        else   
                        {
                            <p>@Html.EditorFor(model => model.IsDefault) Set as Default</p>
                        }
                    </div>
                </div>

                <br/>

                <div class ="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.Name)</label>   
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                
                <br/>
                
                <div class ="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.Code)</label>   
                        @Html.EditorFor(model => model.Code)
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>
                <br/>
        
                <div class="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.IsActive)</label>
                        @Html.EditorFor(model =>model.IsActive)
                    </div>
                </div>

                <div class="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.IsRtl)</label>
                        @Html.EditorFor(model =>model.IsRtl)
                    </div>
                </div>
                        
                <br/>
        

                
                <p>
                    <input type="submit" value="Save"/>
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        <br/>
    </div>
</div>

@section head
{
    @{ Html.RenderAction("AdminHeader","Shared", new {currentItem = "translation"});}
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('form').submit(function () {
            $(this).find('input[type="submit"]').attr('disabled', 'disabled');
        });
    </script>
}
