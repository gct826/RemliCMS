@model RemliCMS.WebData.Entities.Translation

<div class="row">
    <div class="large-12 columns">    
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        @if (ViewBag.Message != null)
        {
            <div class="error">@ViewBag.Message</div>
        }
    </div>
</div>

<div class="row">
    <div class="large-12 columns">    

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Translation</legend>
                <!--input data-val="true" data-val-required="The Id field is required." id="refId" name="refId" type="hidden" value="@ViewBag.ObjectId" /-->
        
                @Html.HiddenFor(model => model.Id)
                <div class ="row">
                    <div class="large-2 columns">
                        <label>@Html.LabelFor(model => model.Url)</label>
                        @Html.ValueFor(model => model.Url)
                        @Html.HiddenFor(model => model.Url)
                    </div>
                    <div class="large-10 columns">
                        @Html.HiddenFor(model => model.IsDefault)
                        @if (Model.IsDefault == false)
                        {
                            <input type="submit" value="Set as Default" name="translation update"/>
                        }
                        else
                        {
                            <p><kbd class="green">Default Translation</kbd></p>   
                        }
                    </div>
                </div>

                <br/>

                <div class ="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.Name)</label>   
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                
                <br/>
                
                <div class ="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.Code)</label>   
                        @Html.EditorFor(model => model.Code)
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>
                <br/>
        
                <div class="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.IsActive)</label>
                        @Html.EditorFor(model =>model.IsActive)
                    </div>
                </div>

                <div class="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.IsRtl)</label>
                        @Html.EditorFor(model =>model.IsRtl)
                    </div>
                </div>
                        
                <br/>
        

                
                <p>
                    <input type="submit" value="Save" name="translation update" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        <br/>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('form').submit(function () {
            $(this).find('input[type="submit" value="Save"]').attr('disabled', 'disabled');
        });
    </script>
}
