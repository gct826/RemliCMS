@model RemliCMS.WebData.Entities.PageContent

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PageContent Create</legend>
        
        <div class="row">
            <div class="small-9 large-4 columns">
                Page Name: @ViewBag.Location
            </div>
        </div>
        
        <br/>

        <div class ="row">
            <div class="small-9 large-4 columns">
                Language: @ViewBag.translation
               <input data-val="true" data-val-required="The Id field is required." id="TranslationId" name="TranslationId" type="hidden" value="@ViewBag.translationId" />
            </div>
        </div>

        <br/>

        <div class ="row">
            <div class="small-9 large-4 columns">
                Content Width: @ViewBag.width
            </div>
            @Html.ActionLink("Edit", "SetWidth", "PageContent", new {ViewBag.indexId, ViewBag.translationId},"")


        </div>

        <div class ="row">
            <div class="small-4 large-4 columns">
                <label>@Html.LabelFor(model => model.Content)</label>   
                @Html.TextAreaFor(model => model.Content,new { id="txtInput", @style = "resize: none; height:auto; overflow:hidden"})
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>
        
        <div class ="row">
            <div class="small-9 large-4 columns">
                <label>@Html.LabelFor(model => model.IsActive)</label>   
                @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "Index", "PageHeader")
</div>

@section head
{
    @{ Html.RenderAction("AdminHeader","Shared", new {currentItem = "pageheader"});}
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    <script>
        $('form').submit(function() {
            $(this).find('input[type="submit"]').attr('disabled', 'disabled');
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#txtInput-aloha").autoGrow();
        });
    </script>
}