@*admin/RegField/Create*@

@model RemliCMS.RegSystem.Entities.RegField

<div class="row">
    <div class="large-12 columns">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Registration Field Create</legend>

                <div class ="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.Name)</label>   
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
        
                <div class ="row">
                    <div class="small-9 large-4 columns">
                        <label>@Html.LabelFor(model => model.Key)</label>   
                        @Html.EditorFor(model => model.Key)
                        @Html.ValidationMessageFor(model => model.Key)
                    </div>
                </div>

                <p>
                    <input type="submit" value="Create" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        <br/>
    </div>
</div>

@section head
{
    @{ Html.RenderAction("AdminHeader","Shared", new {currentItem = "translation"});}
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('form').submit(function() {
        $(this).find('input[type="submit"]').attr('disabled', 'disabled');
        });
    </script>
}